{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"module": "commonjs",
		"baseUrl": "./src",
		"outDir": "./build",
		"rootDir": "./",
		"target": "es6",
		"types": ["node", "reflect-metadata", "googlemaps", "jasmine"],
		"paths": {
			"@angular/*": ["../../../node_modules/@angular/*"],
			"@nebular/*": ["../../../node_modules/@nebular/*"],
			"@modules/server.common/*": [
				"@modules/server.common/*",
				"../../../node_modules/@ever-platform/common/dist/*"
			],
			"@modules/client.common.angular2/*": [
				"@modules/client.common.angular2/*",
				"../../../node_modules/@ever-platform/common-angular/dist/*"
			],
			"@pyro/*": [
				"@pyro/*",
				"../../../node_modules/@ever-platform/common/dist/@pyro/*"
			],
			"mongoose": [
				"../../../node_modules/@ever-platform/common-angular/dist/mongoose-placeholder"
			],
			"typeorm": [
				"../../../node_modules/@ever-platform/common-angular/dist/typeorm-placeholder"
			],
			"@app/*": ["app/*"],
			"environments/*": ["./environments/*"],
			"core-js/es7/reflect": [
				"../../../node_modules/core-js/proposals/reflect-metadata"
			],
			"core-js/es7/array": ["../../../node_modules/core-js/stable/array"],
			"core-js/es7/object": [
				"../../../node_modules/core-js/stable/object"
			],
			"core-js/es6/*": ["../../../node_modules/core-js/es"]
		}
	},
	"angularCompilerOptions": {
		"annotateForClosureCompiler": true,
		"skipTemplateCodegen": true,
		"strictMetadataEmit": true,
		"fullTemplateTypeCheck": true,
		"strictInjectionParameters": true,
		"enableResourceInlining": true
	},
	"include": [
		"./src",
		"../../node_modules/angular2-wizard",
		"../../node_modules/@ever-platform/common-angular",
		"../../node_modules/@ever-platform/common"
	],
	"exclude": ["../../node_modules/angular2-wizard/**/*.spec.ts"]
}
